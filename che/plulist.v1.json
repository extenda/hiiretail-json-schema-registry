{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/extenda/hiiretail-json-schema-registry/master/che/plulist.v1.json",
  "title": "PLU List messages",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "plu"],
    "properties": {
      "effectiveDate": {
        "description": "The date when this PLU list should be applied, if present.",
        "type": "string",
        "format": "date",
        "example": "2021-01-01"
      },
      "id": {
        "description": "A unique identifier for the PLU list.",
        "type": "string",
        "minLength": 1,
        "maxLength": 20,
        "example": "top-5-items-plu"
      },
      "name": {
        "description": "The PLU List name",
        "type": "string",
        "minLength": 1,
        "maxLength": 40,
        "example": "PLU List"
      },
      "description": {
        "description": "The PLU List description",
        "type": "string",
        "minLength": 1,
        "maxLength": 255,
        "example": "The description for PLU List"
      },
      "plu": {
        "description": "PLU lists can contain other PLU lists and/or items.",
        "type": "array",
        "items": {
          "$ref": "#/$defs/PluContentType"
        }
      },
      "additionalProperties": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "value": {
                "oneOf": [
                  {
                    "type": "string",
                    "enum": [
                      "SCO",
                      "POS"
                    ]
                  },
                  {
                    "type": "boolean"
                  }
                ]
              },
              "dataType": {
                "oneOf": [
                  {
                    "type": "string",
                    "enum": [
                      "STRING",
                      "BOOLEAN"
                    ]
                  }
                ]
              }
            }
          }
        }
    }
  },
  "$defs": {
    "PluContentType": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "imageId": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "PLU",
            "ITEM",
            "GROUP"
          ]
        },
        "group": {
          "$ref": "#/$defs/PluGroupType"
        }
      },
      "required": ["id", "type"]
    },
    "PluItemType": {
      "type": "object",
      "required": ["identifier", "imageUrl", "type"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 40,
          "example": "ITEM1"
        },
        "description": {
          "type": "string",
          "minLength": 1,
          "maxLength": 255,
          "example": "An entry for a specific item"
        },
        "imageUrl": {
          "description": "A uri to an image.",
          "type": "string",
          "pattern": "^(https?|file):\\/\\/.+$",
          "maxLength": 2048,
          "example": "https://example.com/assets/plu.png"
        },
        "identifier": {
          "description": "The, item identifier reference",
          "type": "string",
          "minLength": 1,
          "maxLength": 20
        },
        "type": {
          "description": "The, ITEM type is for PLU items.",
          "type": "string",
          "enum": ["ITEM"]
        }
      }
    },
    "PluReferenceType": {
      "imageUrl": {
        "description": "A uri to an image.",
        "type": "string",
        "pattern": "^(https?|file):\\/\\/.+$",
        "maxLength": 2048,
        "example": "https://example.com/assets/plu.png"
      },
      "id": {
        "description": "The id of referenced PLU List",
        "type": "string",
        "minLength": 1,
        "maxLength": 20
      },
      "type": {
        "description": "The PLU_REFERENCE type is for referencing other PLUs.",
        "type": "string",
        "enum": ["PLU_REFERENCE"]
      }
    },
    "PluGroupType": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "imageId": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "PLU_REFERENCE",
              "ITEM",
              "GROUP"
            ]
          }
        },
        "required": ["id", "imageId", "type"]
      }
    },
    "AdditionalProperty": {
      "description": "Contains key-value collection of additional property.",
      "type": "object",
      "properties": {
        "id": {
          "description": "A, unique id for additional property object.",
          "type": "string",
          "minLength": 1,
          "maxLength": 255,
          "example": "property.id"
        },
        "value": {
          "description": "The actual Value of the additional property object.",
          "type": "string",
          "minLength": 1,
          "maxLength": 255,
          "example": "50.00"
        },
        "dataType": {
          "description": "The type of the data found in 'value'.",
          "type": "string",
          "example": "DOUBLE",
          "enum": [
            "BOOL",
            "INT",
            "DOUBLE",
            "STRING",
            "DATE",
            "DATETIME",
            "IMAGE",
            "BINARY",
            "JSON",
            "ARRAY",
            "UNKNOWN"
          ]
        }
      }
    }
  }
}
