{
  "$id": "gle.tender-rules.v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Tender Accounting Rules",
  "description": "List of Tender rules for general ledger accounting and export",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string"
      },
      "config": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "PROVIDER_ID",
              "INTERNAL_TENDER_ID",
              "ROUNDING",
              "PAYMENT_METHOD_NAME",
              "DEFAULT"
            ]
          },
          "accountId": {
            "type": "string"
          },
          "value": {
            "type": ["string", "null"]
          }
        },
        "required": [
          "type",
          "accountId"
        ]
      }
    },
    "required": [
      "id",
      "config"
    ]
  }
}
