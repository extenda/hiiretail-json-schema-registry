{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/extenda/hiiretail-json-schema-registry/master/customer-config/checkout-config/che.plulist.v1.json",
  "title": "PLU List messages",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "id",
      "plu"
    ],
    "properties": {
      "effectiveDate": {
        "description": "The date when this PLU list should be applied, if present. The date should be in UTC time zone",
        "type": "string",
        "format": "date",
        "example": "2021-01-01"
      },
      "id": {
        "description": "A unique identifier for the PLU list.",
        "type": "string",
        "minLength": 1,
        "maxLength": 20,
        "example": "top-5-items-plu"
      },
      "name": {
        "description": "The PLU List name",
        "type": "string",
        "minLength": 1,
        "maxLength": 40,
        "example": "PLU List"
      },
      "description": {
        "description": "The PLU List description",
        "type": "string",
        "minLength": 1,
        "maxLength": 255,
        "example": "The description for PLU List"
      },
      "deviceTypes": {
        "description": "A list of device types that this PLUList applies to",
        "type": "array",
        "example": "[{'id': 'SelfCheckout'}]",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "minLength": 1,
              "maxLength": 40
            }
          }
          }
      },
      "isModifiable": {
        "description": "If it is possible to modify the content of this PLUList further down the hierarchy",
        "type": "boolean",
        "example": "true"
      },
      "isRemovable": {
        "description": "If it is possible to remove the content of this PLUList further down the hierarchy",
        "type": "boolean",
        "example": "true"
      },
      "content": {
        "description": "PLU lists can contain other PLU lists and/or items.",
        "type": "array",
        "items": {
          "$ref": "#/$defs/PluContentType"
        }
      },
      "additionalProperties": {
        "description": "Additional custom properties can be added via this field.",
        "type": "array",
        "items": {
          "$ref": "#/$defs/AdditionalProperty"
        }
      }
    }
  },
  "$defs": {
    "PluContentType": {
      "type": "object",
      "oneOf": [
        {
          "$ref": "#/$defs/PluItemType"
        },
        {
          "$ref": "#/$defs/PluGroupType"
        }
      ]
    },
    "PluItemType": {
      "description": "This is an entry for a specific item, and is placed inside a PLU list.",
      "type": "object",
      "required": [
        "identifier",
        "images",
        "type"
      ],
      "properties": {
        "images": {
          "$ref": "#/$defs/ImagesType"
        },
        "identifier": {
          "description": "The, item identifier reference",
          "type": "string",
          "minLength": 1,
          "maxLength": 20
        },
        "type": {
          "description": "The, ITEM type is for PLU items.",
          "type": "string",
          "enum": [
            "ITEM"
          ]
        }
      }
    },
    "PluGroupType": {
      "description": "This is a PLU - it contains a set of other PLUs to form a hierarchy.",
      "type": "object",
      "required": [
        "id",
        "name",
        "content",
        "type"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 40,
          "example": "Apples"
        },
        "description": {
          "type": "string",
          "minLength": 1,
          "maxLength": 255,
          "example": "Our delicious apples"
        },
        "id": {
          "type": "string"
        },
        "images": {
          "$ref": "#/$defs/ImagesType"
        },
        "content": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/PluContentType"
          }
        },
        "type": {
          "description": "The GROUP type is for PLU lists.",
          "type": "string",
          "enum": [
            "GROUP"
          ]
        }
      }
    },
    "AdditionalProperty": {
      "description": "Contains key-value collection of additional property.",
      "type": "object",
      "required": [
        "id",
        "value",
        "dataType"
      ],
      "properties": {
        "id": {
          "description": "A, unique id for additional property object.",
          "type": "string",
          "minLength": 1,
          "maxLength": 255,
          "example": "property.id"
        },
        "value": {
          "description": "The actual Value of the additional property object.",
          "type": "string",
          "minLength": 1,
          "maxLength": 255,
          "example": "50.00"
        },
        "dataType": {
          "description": "The type of the data found in 'value'.",
          "type": "string",
          "example": "DOUBLE",
          "enum": [
            "BOOL",
            "INT",
            "DOUBLE",
            "STRING",
            "DATE",
            "DATETIME",
            "IMAGE",
            "BINARY",
            "JSON",
            "ARRAY",
            "UNKNOWN"
          ]
        }
      }
    },
    "ImagesType": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "url"
        ],
        "properties": {
          "url": {
            "description": "A uri to an image.",
            "type": "string",
            "pattern": "^(https?|file)://.+$",
            "maxLength": 2048,
            "example": "https://example.com/assets/plu.png"
          }
        }
      }
    }
  }
}
