{
  "$id": "loy.external-api.v1",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Loyalty Integration Configuration",
  "oneOf": [
    {
      "title": "IntegrationConfig",
      "type": "object",
      "properties": {
        "baseUrl": { "type": "string", "format": "uri" },
        "timeout": { "type": "number", "minimum": 0 },
        "authenticationType": { "const": "none" }
      },
      "required": ["baseUrl", "timeout", "authenticationType"],
      "additionalProperties": false
    },
    {
      "title": "BasicAuthIntegrationConfig",
      "type": "object",
      "properties": {
        "baseUrl": { "type": "string", "format": "uri" },
        "timeout": { "type": "number", "minimum": 0 },
        "authenticationType": { "const": "basic" },
        "authenticationConfig": {
          "type": "object",
          "properties": {
            "username": { "type": "string" },
            "password": { "type": "string" }
          },
          "required": ["username", "password"],
          "additionalProperties": false
        }
      },
      "required": [
        "baseUrl",
        "timeout",
        "authenticationType",
        "authenticationConfig"
      ],
      "additionalProperties": false
    },
    {
      "title": "OAuthIntegrationConfig",
      "type": "object",
      "properties": {
        "baseUrl": { "type": "string", "format": "uri" },
        "timeout": { "type": "number", "minimum": 0 },
        "authenticationType": { "const": "oauth2" },
        "authenticationConfig": {
          "oneOf": [
            {
              "title": "OAuthClientCredentialConfig",
              "type": "object",
              "properties": {
                "tokenUrl": { "type": "string", "format": "uri" },
                "clientId": { "type": "string" },
                "clientSecret": { "type": "string" },
                "grantType": { "const": "client_credentials" },
                "scope": { "type": "string" },
                "authTimeout": { "type": "number", "minimum": 0 }
              },
              "required": ["tokenUrl", "clientId", "clientSecret", "grantType"],
              "additionalProperties": false
            },
            {
              "title": "OAuthImplicitConfig",
              "type": "object",
              "properties": {
                "tokenUrl": { "type": "string", "format": "uri" },
                "clientId": { "type": "string" },
                "accessToken": { "type": "string" },
                "tokenType": { "type": "string" },
                "grantType": { "const": "implicit" },
                "scope": { "type": "string" },
                "authTimeout": { "type": "number", "minimum": 0 }
              },
              "required": [
                "tokenUrl",
                "clientId",
                "accessToken",
                "tokenType",
                "grantType"
              ],
              "additionalProperties": false
            },
            {
              "title": "OAuthPasswordConfig",
              "type": "object",
              "properties": {
                "tokenUrl": { "type": "string", "format": "uri" },
                "clientId": { "type": "string" },
                "userName": { "type": "string" },
                "password": { "type": "string" },
                "grantType": { "const": "password" },
                "scope": { "type": "string" },
                "authTimeout": { "type": "number", "minimum": 0 }
              },
              "required": [
                "tokenUrl",
                "clientId",
                "userName",
                "password",
                "grantType"
              ],
              "additionalProperties": false
            }
          ]
        }
      },
      "required": [
        "baseUrl",
        "timeout",
        "authenticationType",
        "authenticationConfig"
      ],
      "additionalProperties": false
    },
    { "type": "null" }
  ]
}
