{
  "$id": "att.age-color-config.v1",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Age Range Color Configuration",
  "type": "object",
  "properties": {
    "youth": {
      "type": "object",
      "description": "Configuration for ages category 1",
      "properties": {
        "range": {
          "type": "array",
          "description": "Defines the age range [min, max]. Only the minimum must be >= 0.",
          "items": [
            { "type": "number", "minimum": 0 },
            { "type": "number", "maximum": 999 }
          ],
          "minItems": 2,
          "maxItems": 2
        },
        "color": {
          "type": "string",
          "description": "Color name, HEX, or RGBA value applied to this age range."
        }
      },
      "required": ["range", "color"]
    },
    "teen": {
      "type": "object",
      "description": "Configuration for ages category 2",
      "properties": {
        "range": {
          "type": "array",
          "description": "Defines the age range [min, max]. Only the minimum must be >= 0.",
          "items": [
            { "type": "number", "minimum": 0 },
            { "type": "number", "maximum": 999 }
          ],
          "minItems": 2,
          "maxItems": 2
        },
        "color": {
          "type": "string",
          "description": "Color name, HEX, or RGBA value applied to this age range."
        }
      },
      "required": ["range", "color"]
    },
    "adult": {
      "type": "object",
      "description": "Configuration for ages category 3",
      "properties": {
        "range": {
          "type": "array",
          "description": "Defines the age range [min, max]. Only the minimum must be >= 0.",
          "items": [
            { "type": "number", "minimum": 0 },
            { "type": "number", "maximum": 999 }
          ],
          "minItems": 2,
          "maxItems": 2
        },
        "color": {
          "type": "string",
          "description": "Color name, HEX, or RGBA value applied to this age range."
        }
      },
      "required": ["range", "color"]
    }
  },
  "required": ["youth", "teen", "adult"]
}
